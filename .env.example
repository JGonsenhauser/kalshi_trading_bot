# Kalshi API Configuration
# Get keys from: https://kalshi.com/settings/api
KALSHI_API_KEY=your_api_key_here
KALSHI_API_SECRET=your_api_secret_here
KALSHI_ENV=demo  # 'demo' for sandbox, 'prod' for live trading

# News API (get free key from newsapi.org)
NEWS_API_KEY=your_newsapi_key_here

# Risk Management Settings
INITIAL_BALANCE=10000.0  # Starting capital
RISK_PER_TRADE_PCT=0.01  # 1% max per trade
MAX_DAILY_DRAWDOWN_PCT=0.05  # 5% daily loss limit
MAX_OPEN_POSITIONS=5  # Position count limit

# Trading Parameters
DEVIATION_THRESHOLD=0.05  # 5% mispricing to trigger
STOP_LOSS_DEVIATION=0.05  # Cut if edge flips 5%
SCAN_INTERVAL_SECONDS=30  # Market polling frequency

# External Data Sources
POLL_AGGREGATOR_URL=https://www.realclearpolitics.com
ENABLE_NEWS_TRIGGERS=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=kalshi_bot.log
